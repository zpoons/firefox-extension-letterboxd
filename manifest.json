{
  "manifest_version": 2,
  "name": "asdf",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "favicon.ico",
    "96": "favicon.ico"
  },
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_title": "go to letterboxd"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}